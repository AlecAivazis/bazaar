{
    "name": "bazr-client",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "react-app-rewired start",
        "build": "react-app-rewired build",
        "build:schema": "babel-node scripts/build-schema",
        "test": "react-app-rewired test --env=jsdom",
        "test:watch": "npm run test -- --watch",
        "eject": "react-scripts eject",
        "relay": "relay-compiler --src ./src --schema schema.json",
        "relay:watch": "npm run relay -- --watch",
        "flow": "flow",
        "flow:watch": "watchman-make -p 'src/**/*.js' --make 'npm run' -t flow",
        "node": "babel-node"
    },
    "proxy": {
        "/graphql": {
            "target": "http://localhost:4000"
        }
    },
    "babel": {
        "presets": [
            "babel-preset-env",
            "stage-0"
        ]
    },
    "jest": {
        "setupFiles": [
            "<rootDir>/scripts/init-enzyme.js"
        ]
    },
    "dependencies": {
        "@babel/polyfill": "^7.0.0-beta.34",
        "apollo-fetch": "^0.6.0",
        "babel-plugin-lodash": "^3.3.2",
        "babel-plugin-relay": "^1.4.1",
        "babel-plugin-transform-define": "^1.3.0",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "browser-env": "^3.2.4",
        "color": "^2.0.1",
        "dotenv": "^4.0.0",
        "enzyme": "^3.2.0",
        "enzyme-adapter-react-16": "^1.1.0",
        "flow-bin": "^0.59.0",
        "flow-typed": "^2.2.3",
        "graphiql": "^0.11.10",
        "graphql-cli": "^1.1.0",
        "graphql-tools": "^2.7.2",
        "moment": "^2.19.2",
        "prop-types": "^15.6.0",
        "quark-web": "0.0.9-beta.33",
        "query-string": "^5.0.1",
        "react": "^16.1.1",
        "react-app-rewired": "^1.3.5",
        "react-dom": "^16.0.0",
        "react-native-web": "^0.1.13",
        "react-relay": "^1.4.1",
        "react-router-dom": "^4.2.2",
        "react-scripts": "1.0.17",
        "react-sparklines": "^1.7.0",
        "relay-compiler": "^1.4.1",
        "tinycolor2": "^1.4.1"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 120,
        "semi": false,
        "singleQuote": true,
        "trailing-comma": true
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-preset-env": "^1.6.1"
    }
}
