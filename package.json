{
    "name": "bazr",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "client": "webpack-dev-server",
        "server": "babel-node server/index",
        "build:client": "webpack",
        "build:schema": "babel-node scripts/build-schema",
        "__internal__truffle": "cd contracts && truffle ",
        "contracts:compile": "npm run __internal__truffle -- compile",
        "contracts:build": "npm run __internal__truffle -- build",
        "contracts:test": "npm run __internal__truffle -- test",
        "relay": "relay-compiler --src ./client --schema schema.json",
        "relay:watch": "npm run relay -- --watch",
        "test": "jest",
        "test:coverage": "npm run test -- --coverage",
        "test:coverage:report":
            "npm run test:coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
        "test:watch": "npm run test -- --watch",
        "mist": "open -a /Applications/Mist.app --args --rpc http://localhost:8545",
        "__internal__knex": "knex --knexfile server/database/knexfile.js",
        "db:migrate": "npm run __internal__knex -- migrate:latest",
        "db:seed": "npm run __internal__knex -- seed:run",
        "db:init": "npm run db:migrate && npm run db:seed"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 120,
        "semi": false,
        "singleQuote": true,
        "trailing-comma": true
    },
    "jest": {
        "setupFiles": ["<rootDir>/scripts/init-enzyme.js"],
        "testMatch": ["**/*test.js?(x)"]
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-plugin-lodash": "^3.3.2",
        "babel-plugin-relay": "^1.4.1",
        "babel-plugin-root-import": "^5.1.0",
        "babel-plugin-transform-define": "^1.3.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "coveralls": "^3.0.0",
        "css-loader": "^0.28.7",
        "enzyme": "^3.2.0",
        "enzyme-adapter-react-16": "^1.1.0",
        "flow-bin": "^0.62.0",
        "flow-typed": "^2.2.3",
        "html-webpack-plugin": "^2.30.1",
        "jest": "^22.0.3",
        "jest-environment-jsdom": "^22.0.3",
        "react-hot-loader": "^3.1.3",
        "relay-compiler": "^1.4.1",
        "style-loader": "^0.19.1",
        "webpack-dev-server": "^2.9.7"
    },
    "dependencies": {
        "@babel/polyfill": "^7.0.0-beta.34",
        "apollo-fetch": "^0.7.0",
        "apollo-server-express": "^1.3.2",
        "bignumber.js": "^5.0.0",
        "browser-env": "^3.2.4",
        "color": "^2.0.1",
        "dotenv": "^4.0.0",
        "ethjs": "^0.3.1",
        "express": "^4.16.2",
        "graphiql": "^0.11.10",
        "graphql": "^0.12.3",
        "graphql-cli": "^2.1.0",
        "graphql-subscriptions": "^0.5.6",
        "graphql-tools": "^2.7.2",
        "isomorphic-fetch": "^2.2.1",
        "join-monster": "^2.0.15",
        "join-monster-graphql-tools-adapter": "0.0.2",
        "knex": "^0.14.0",
        "moment": "^2.19.2",
        "prop-types": "^15.6.0",
        "quark-web": "0.1.0-beta.3",
        "query-string": "^5.0.1",
        "react": "^16.2.0",
        "react-dom": "^16.0.0",
        "react-functional": "^2.0.0",
        "react-native-web": "^0.2.1",
        "react-relay": "^1.4.1",
        "react-router-dom": "^4.2.2",
        "react-scripts": "1.0.17",
        "react-sparklines": "^1.7.0",
        "regenerator-runtime": "^0.11.0",
        "sqlite": "^2.8.0",
        "subscriptions-transport-ws": "^0.9.4",
        "tinycolor2": "^1.4.1",
        "url-parse": "^1.2.0",
        "web3": "^1.0.0-beta.27"
    }
}
